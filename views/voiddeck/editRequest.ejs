<h2>this is the edit request page</h2>

<div class="container">
  <form action=<%= "/voiddeck/requests/" + requestItem._id + "?_method=PUT" %> method="POST">

    <div class="modal-body row">
      <div class="form-group col-md-4">
        <label for="foodItem">Help me buy:</label>
        <input type="text" class="form-control" id="foodItemInput" value="<%= currentUserInfo.foodItem %>" name="foodItem">
      </div>

      <div class="form-group col-md-4">
        <label for="destination">Deliver to:</label>
        <% if ((requestItem.members.length > 1) || (requestItem.helper.length === 1)) { %>
          <input type="text" class="form-control" value="<%= requestItem.destination %>" name="destination" disabled>
        <% } %>
        <% if ((requestItem.members.length === 1) && (requestItem.helper.length === 0)) { %>
          <input type="text" class="form-control" value="<%= requestItem.destination %>" name="destination">
        <% } %>
      </div>
    </div>

    My available collection day and time:

    <div class="modal-body row">
      <div class="form-group col-md-4">
        <label for="collectionStartDate">From (Day):</label>
        <% if ((requestItem.members.length > 1) || (requestItem.helper.length === 1)) { %>
          <input class="form-control" type="date" value="<%= requestItem.collectionStartDate %>" id="collectionStartDate" name="collectionStartDate" disabled>
        <% } %>
        <% if ((requestItem.members.length === 1) && (requestItem.helper.length === 0)) { %>
          <input class="form-control" type="date" value="<%= requestItem.collectionStartDate %>" id="collectionStartDate" name="collectionStartDate">
        <% } %>
      </div>
      <div class="form-group col-md-4">
        <label for="collectionStartTime">From (Time):</label>
        <% if ((requestItem.members.length > 1) || (requestItem.helper.length === 1)) { %>
          <input class="form-control" type="time" id="collectionStartTime" value="<%= requestItem.collectionStartTime %>" name="collectionStartTime" disabled>
        <% } %>
        <% if ((requestItem.members.length === 1) && (requestItem.helper.length === 0)) { %>
          <input class="form-control" type="time" id="collectionStartTime" value="<%= requestItem.collectionStartTime %>" name="collectionStartTime">
        <% } %>

      </div>
    </div>

    <div class="modal-body row">
      <div class="form-group col-md-4">
        <label for="collectionEndDate">To (Day):</label>
        <% if ((requestItem.members.length > 1) || (requestItem.helper.length === 1)) { %>
          <input class="form-control" type="date" value="2017-01-25" id="collectionEndDate" value="<%= requestItem.collectionEndDate %>" name="collectionEndDate" disabled>
        <% } %>
        <% if ((requestItem.members.length === 1) && (requestItem.helper.length === 0)) { %>
          <input class="form-control" type="date" value="2017-01-25" id="collectionEndDate" value="<%= requestItem.collectionEndDate %>" name="collectionEndDate">
        <% } %>
      </div>
      <div class="form-group col-md-4">
        <label for="collectionEndTime">To (Time):</label>
        <% if ((requestItem.members.length > 1) || (requestItem.helper.length === 1)) { %>
          <input class="form-control" type="time" id="collectionEndTime" value="<%= requestItem.collectionEndTime %>" name="collectionEndTime" disabled>
        <% } %>
        <% if ((requestItem.members.length === 1) && (requestItem.helper.length === 0)) { %>
          <input class="form-control" type="time" id="collectionEndTime" value="<%= requestItem.collectionEndTime %>" name="collectionEndTime">
        <% } %>
      </div>
    </div>

    <button type="submit" class="btn btn-default">Submit</button>



  </form>
  <form action=<%= "/voiddeck/requests/" + requestItem._id + "?_method=DELETE" %> method="POST">
    <button type="submit" class="btn btn-danger">
      <% if (requestItem.members.length > 1) { %>
        Leave
      <% } %>
      <% if (requestItem.members.length === 1) { %>
        Delete
      <% } %>
    </button>
  </form>

</div>
