<h2>this is the edit request page</h2>

<div class="container">
  <form action="/voiddeck/requests/<%= request._id %>?_method=PUT" method="POST">

    <div class="modal-body row">
      <div class="form-group col-md-4">
        <label for="foodItem">Help me buy:</label>
        <input type="text" class="form-control" id="foodItem" value="<%= request.food %>" name="foodItem">
      </div>

      <div class="form-group col-md-4">
        <label for="destination">Deliver to:</label>
        <input type="text" class="form-control" id="destination" value="<%= request.destination%>" name="destination">
      </div>
    </div>

    My available collection day and time:

    <div class="modal-body row">
      <div class="form-group col-md-4">
        <label for="collectionStartDate">From (Date):</label>
        <input class="form-control" type="date" value="<%= request.collectionStartDate %>" id="collectionStartDate" name="collectionStartDate">
      </div>
      <div class="form-group col-md-2">
        <label for="collectionStartHour">From (Hour):</label>
        <input class="form-control" type="number" value="<%= request.collectionStartHour %>" min="0" max="23" id="collectionStartHour" name="collectionStartHour">
      </div>
      <div class="form-group col-md-2">
        <label for="collectionStartMin">From (Min):</label>
        <input class="form-control" type="number" value="<%= request.collectionStartMin %>" min="0" max="59" id="collectionStartMin" name="collectionStartMin">
      </div>
    </div>

    <div class="modal-body row">
      <div class="form-group col-md-4">
        <label for="collectionEndDate">To (Date):</label>
        <input class="form-control" type="date" value="<%= request.collectionEndDate %>" id="collectionEndDate" name="collectionEndDate">
      </div>
      <div class="form-group col-md-2">
        <label for="collectionEndHour">To (Hour):</label>
        <input class="form-control" type="number" value="<%= request.collectionEndHour %>" min="0" max="23" id="collectionEndHour" name="collectionEndHour">
      </div>
      <div class="form-group col-md-2">
        <label for="collectionEndMin">To (Min):</label>
        <input class="form-control" type="number" value="<%= request.collectionEndMin %>" min="0" max="59" id="collectionEndMin" name="collectionEndMin">
      </div>
    </div>

    <button type="submit" class="btn btn-default">Submit</button>



  </form>
  <form action=<%= "/voiddeck/requests/" + request._id + "?_method=DELETE" %> method="POST">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>

</div>
