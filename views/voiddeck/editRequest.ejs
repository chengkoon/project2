<h2>Edit your request:</h2>

<div class="container">
  <form action="/voiddeck/requests/<%= request._id %>?_method=PUT" method="POST">

    <div class="modal-body row">
      <div class="form-group col-md-6">
        <label for="food">Help me buy:</label>
        <textarea name="food" rows="4"><%= request.food %></textarea>
      </div>

      <div class="form-group col-md-6">
        <label for="destination">Deliver to:</label>
        <select name="destination">
          <option value="cinnamon">Cinnamon College Lift Lobby</option>
          <option value="capt">CAPT Lift Lobby</option>
          <option value="tembusu">Tembusu College Lift Lobby</option>
          <option value="nus-yale">NUS Yale Lift Lobby</option>
        </select>
      </div>

    </div>

    My available collection day and time:

    <div class="modal-body row">
      <div class="form-group col-md-4">
        <label for="from">From:</label>
        <select class="from" name="collectionFrom"></select>
      </div>
      <div class="form-group col-md-4">
        <label for="to">To:</label>
        <select class="to" name="collectionTo"></select>
      </div>
      <div class="form-group col-md-4">
        <label for="rewards">Rewards:</label>
        <select class="rewards" name="rewards">
          <% for (let i=1; i<=currentUser.tokens; i++) { %>
            <option value="<%= i %>"><%= i %> x Token(s)</option>
          <% } %>
        </select>
      </div>
    </div>

    <button type="submit" class="btn btn-default">Submit</button>



  </form>
  <form action=<%= "/voiddeck/requests/" + request._id + "?_method=DELETE" %> method="POST">
    <button type="submit" class="btn btn-danger">Delete</button>
  </form>

</div>
